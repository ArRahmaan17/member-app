<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
   app:cardBackgroundColor="@color/app"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:paddingBottom="20dp"
        android:layout_marginEnd="20dp">
        <TextView
            android:id="@+id/title_transaction"
            android:text="Test transaction"
            android:textSize="20sp"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/charge_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_transaction"
            android:layout_alignEnd="@+id/title_transaction"
            android:layout_alignParentStart="true"
            android:text="Rp 200.000.000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/date_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="20 Januari 2012"
            android:textAlignment="textEnd"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
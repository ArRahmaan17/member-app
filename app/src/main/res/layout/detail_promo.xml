<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_detail_promo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher_background" />
    <androidx.cardview.widget.CardView
        android:layout_below="@id/image_detail_promo"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/container_detail_promo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_below="@id/image_detail_promo">
            <TextView
                android:id="@+id/title_detail_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:maxLines="1"
                android:text="Title Detail Promo" />

            <TextView
                android:id="@+id/date_detail_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Detail Tanggal Promo"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/details_detail_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:maxLines="5"
                android:ellipsize="end"
                android:text="Description Promo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="13sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Syarat dan Ketentuan" />

            <TextView
                android:id="@+id/tnc_detail_promo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Description terms and conditions" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:text="Please Complete Your Profile"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/name_dialog"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:hint="Name"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/address_dialog"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_dialog"
        android:hint="Address"/>
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_dialog"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_dialog"
        android:inputType="textEmailAddress"
        android:hint="Email"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_completion_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_dialog"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/app"
        android:text="Save" />
</RelativeLayout>
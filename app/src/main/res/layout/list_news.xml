<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardElevation="10dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

        <RelativeLayout
            android:id="@+id/container_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/news_background"/>

            <LinearLayout
                android:id="@+id/container_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Lorem ipsum dolor sit amet consectetur"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/content_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Senin, 20 Desember 2021"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/content_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Consequatur, aliquam?..."
                android:fontFamily="sans-serif-light"
                android:layout_below="@+id/container_title1"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>